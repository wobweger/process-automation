{
  "name": "process-automation",
  "displayName": "process-automation",
  "description": "process automation based on ISA88 and NE33",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:testView",
    "onView:notepad.notesList",
    "onCommand:process-automation.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notepad.createNote",
        "title": "Notepad: Create a note",
        "icon": "$(add)"
      },
      {
        "command": "notepad.deleteNote",
        "title": "Notepad: Delete note",
        "icon": "$(trash)"
      },
			{
				"command": "PrcAut.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
      {
        "command": "process-automation.helloWorld",
        "title": "pa.Hello World"
      },
      {
        "command": "process-automation.Viewer",
        "title": "pa.Viewer"
      },
      {
        "command": "testView.reveal",
        "title": "pa.Test View: Reveal"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notepad",
          "title": "Notepad",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "testView",
          "name": "Test View"
        }
      ],
      "notepad": [
        {
          "id": "notepad.notesList",
          "name": "My Notes",
          "type": "tree",
          "visibility": "visible"
        },
				{
					"id": "PrcAut",
					"name": "Process Automation",
					"icon": "media/dep.svg",
					"contextualTitle": "Process Automation Physical Model"
				}
      ]
    },
    "viewsWelcome": [
      {
        "view": "notepad.notesList",
        "contents": "No notes yet!\n[Create a note](command:notepad.createNote)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "notepad.createNote",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "notepad.deleteNote",
          "group": "inline"
        },
				{
					"command": "PrcAut.refresh",
					"when": "view == PrcAut",
					"group": "navigation"
				}
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/uuid": "^8.3.1",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@types/d3": "^7.4.0",
    "@types/d3-selection": "^3.0.3",
    "d3": "^7.7.0",
    "d3-selection": "^3.0.0",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "uuid": "^8.3.2"
  }
}
